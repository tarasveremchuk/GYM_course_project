<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="GymPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <class>com.gym.model.User</class>
        <class>com.gym.model.Client</class>
        <class>com.gym.model.Staff</class>
        <class>com.gym.model.Membership</class>
        <class>com.gym.model.Payment</class>
        <class>com.gym.model.Visit</class>
        <class>com.gym.model.Training</class>
        <class>com.gym.model.Booking</class>
        <class>com.gym.model.ClientTrainer</class>
        

    </persistence-unit>
</persistence>
